extends user-layout
block content
  .container
    .row
      .col-sm-2
      .col-sm-8
        .h4.mt-5 Login
        - if (errs) { errs.forEach(function(error) {
          .alert.alert-danger
            span #{error.msg}
        - }) }
        form(action="./", method="POST")
          label(for="email") Email
          input(type="email", name="email", autofocuse='autofocuse', placeholder='email', value=email||'', required)#email.form-control
          label(for="password") Password 
          input(type="password", name="password", placeholder='password', value=password||'', required)#password.form-control
          hr
          input(type="submit", name="submit", value="Login").btn.btn-primary
      .col-sm-2
